<link rel="stylesheet" href="/css/admin.css" />
<h2>Edit Product</h2>
<form action="/admin/products/edit/<%= product._id %>" method="POST" class="admin-form">
  <label>Product Name:</label>
  <input type="text" name="name" value="<%= product.name %>" required>

  <label>Price:</label>
  <input type="number" step="0.01" name="price" value="<%= product.price %>" required>

  <label>Description:</label>
  <textarea name="description" required><%= product.description %></textarea>

  <label>Image URL:</label>
  <input type="text" name="url" value="<%= product.url %>" required>

  <label>Category:</label>
  <select name="category" required>
    <option value="t_shirts" <%= product.category === "t_shirts" ? "selected" : "" %>>T-Shirts</option>
    <option value="jackets" <%= product.category === "jackets" ? "selected" : "" %>>Jackets</option>
  </select>

  <button type="submit">Update Product</button>
</form>
