<img class="logo" src="/assets/logo.svg" width="100" height="100" />
<h2 class="heading">Sign Up</h2>

<% if (error.length > 0) { %>
<p class="error"> <%= error %> </p>
<% } %>

<form method="POST" class="auth-form">
  <div class="form-group">
    <label for="name">Full Name</label>
    <input type="text" id="name" name="name" required />
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required />
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" class="password" name="password" minlength="6" required />
  </div>

  <div class="form-group">
    <label for="confirm-password">Confirm Password</label>
    <input type="password" id="confirm-password" class="confirm" name="confirm-password" minlength="6" required />
    <p class="p-error">Password does not match</p>
  </div>

  <button type="submit" class="btn">Sign Up</button>
  <p class="switch">Already have an account? <a href="login">Log in</a></p>
<script src="/js/signup.js"></script>
</form>

